<body>
    <div class="container" style="margin: auto; ">
        <div class="row" >
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card-shadow">
            
                    <div class="card-body p-4" style="background-color: lightblue;">
                        
                        <form action="/add" method="post" id="form"class="form-control form-control-lg "style="background-color: lightblue;" >
                            <div  class=" card-header"  style="color: black; text-align: center ;background-color: blueviolet;">
                                <h3>Add  Student data</h3>
                            </div>
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter your name here"/>
                            </div>
                            <div class="mb-3">
                                <label for="email">email</label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter your email here"/>
                             </div>
                             <div class="mb-3">
                                <label for="phone">phone</label>
                                <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter your number here"/>

                            </div>
                            <div class="mb-3 d-grid">
                                
                                
                                <button type="submit" class="btn btn-success btn-lg " style="font-size: 25px; " >Add User</button>

                            </div>

                        </form>

                    </div>


                </div>
       
          </div>
          </div>
          </div>

    </div>
